<Window x:Class="FootballFieldManagement.Views.HomeWindow"
        x:Name="wdHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballFieldManagement.Views"
        mc:Ignorable="d"
        DataContext="{StaticResource HomeVM}"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        Title="Phần mềm Quản lý sân bóng" 
        Height="810" 
        Width="1447" 
        WindowStartupLocation="CenterScreen" 
        Background="#FFF4EEFF"
        ResizeMode="CanMinimize">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Activated">
            <i:InvokeCommandAction Command="{Binding G_LoadCommand}" 
                                   CommandParameter="{Binding ElementName=stkGoods}"/>
            <i:InvokeCommandAction Command="{Binding E_LoadCommand}" 
                                   CommandParameter="{Binding ElementName=wdHome}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid 
        x:Name="grdWindow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid 
            x:Name="grdMenu" 
            HorizontalAlignment="Left" 
            Height="780" 
            Margin="0" 
            VerticalAlignment="Top" 
            Width="240" 
            Background="{StaticResource White}" 
            Grid.RowSpan="2">
            <Grid 
                x:Name="grdTitle" 
                HorizontalAlignment="Center"
                Height="100" 
                Margin="0,20,0,0"
                VerticalAlignment="Top"
                Width="180">
                <materialDesign:PackIcon 
                    x:Name="icnCube" 
                    Kind="Cube" 
                    Width="50" 
                    Height="50" 
                    Foreground="{StaticResource Primary}" 
                    HorizontalAlignment="Center" />
                <Label 
                    x:Name="lbTitle"  
                    HorizontalAlignment="Center"
                    Height="50" 
                    Margin="0" 
                    VerticalAlignment="Bottom" 
                    VerticalContentAlignment="Center"
                    Padding="6,5,5,5" 
                    FontSize="22" 
                    FontWeight="Bold" 
                    Foreground="{DynamicResource Black1}"/>
            </Grid>
            <StackPanel
                x:Name="stkMenu" 
                HorizontalAlignment="Center" 
                Height="420" 
                Margin="0,160,0,0" 
                VerticalAlignment="Top"
                Width="170" >
                <Grid 
                    x:Name="grdHome" 
                    HorizontalAlignment="Left"
                    Height="70" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon
                        x:Name="icnHome" 
                        Kind="HomeOutline" 
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Foreground="{DynamicResource Gray2}" />
                    <Button 
                        x:Name="btnHome" 
                        Uid="0"
                        Content="Trang chủ"
                        HorizontalAlignment="Left" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}" 
                        FontSize="20" 
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Left" 
                        FontWeight="SemiBold" 
                        Padding="50,0,0,0" 
                        Cursor="Hand" 
                        Foreground="{DynamicResource Gray2}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnHome}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid 
                    x:Name="grdField" 
                    HorizontalAlignment="Left"
                    Height="70" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon 
                        x:Name="icnField" 
                        Kind="SoccerField"
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center" 
                        Cursor="Hand" 
                        Foreground="{StaticResource Gray2}" 
                        Margin="0,19" />
                    <Button
                        x:Name="btnField" 
                        Uid="1"
                        Content="Sân bóng"
                        HorizontalAlignment="Left" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}" 
                        FontSize="20" 
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Left" 
                        FontWeight="SemiBold" 
                        Padding="50,0,0,0" 
                        Cursor="Hand"
                        Foreground="{DynamicResource Gray2}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnField}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid 
                    x:Name="grdGoods" 
                    HorizontalAlignment="Left"
                    Height="70" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon 
                        x:Name="icnGoods" 
                        Kind="StorefrontOutline" 
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center" 
                        Cursor="Hand"
                        Foreground="{StaticResource Gray2}" />
                    <Button 
                        x:Name="btnGoods" 
                        Uid="2"
                        Command="{Binding G_LoadCommand}"
                        CommandParameter="{Binding ElementName=stkGoods}"
                        Content="Hàng hóa"
                        HorizontalAlignment="Right" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}" 
                        FontSize="20" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Left"
                        FontWeight="SemiBold" 
                        Padding="50,0,0,0" 
                        Cursor="Hand" 
                        Foreground="{StaticResource Black3}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnGoods}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid
                    x:Name="grdEmployee" 
                    HorizontalAlignment="Left"
                    Height="70" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon
                        x:Name="icnEmployee" 
                        Kind="AccountOutline" 
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center" 
                        Cursor="Hand" 
                        Foreground="{StaticResource Gray2}" />
                    <Button 
                        x:Name="btnEmployee" 
                        Uid="3"
                        Command="{Binding E_LoadCommand}"
                        CommandParameter="{Binding ElementName=wdHome}"
                        Content="Nhân viên"
                        HorizontalAlignment="Right" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}"
                        FontSize="20" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Left" 
                        FontWeight="SemiBold" 
                        Padding="50,0,0,0" 
                        Cursor="Hand"
                        Foreground="{StaticResource Black3}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}" 
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}" 
                                                       CommandParameter="{Binding ElementName=btnEmployee}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid
                    x:Name="grdReport" 
                    HorizontalAlignment="Left"
                    Height="70" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon
                        x:Name="icnReport" 
                        Kind="ChartAreaspline" 
                        Width="30" 
                        Height="30" 
                        VerticalAlignment="Center" 
                        Cursor="Hand" 
                        Foreground="{StaticResource Gray2}" />
                    <Button 
                        x:Name="btnReport" 
                        Uid="4"
                        Content="Báo cáo"
                        HorizontalAlignment="Right" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}" 
                        FontSize="20" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Left" 
                        FontWeight="SemiBold"
                        Padding="50,0,0,0"
                        Cursor="Hand" 
                        Foreground="{StaticResource Black3}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}" 
                                                       CommandParameter="{Binding ElementName=btnReport}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid 
                    x:Name="grdSetting" 
                    HorizontalAlignment="Left"
                    Height="70" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon
                        x:Name="icnSetting" 
                        Kind="CogOutline" 
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center" 
                        Cursor="Hand" 
                        Foreground="{StaticResource Gray2}" />
                    <Button 
                        x:Name="btnSetting" 
                        Uid="5"
                        Content="Cài đặt"
                        HorizontalAlignment="Right" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}"
                        FontSize="20" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Left" 
                        FontWeight="SemiBold" 
                        Padding="50,0,0,0" 
                        Cursor="Hand" 
                        Foreground="{StaticResource Black3}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}" 
                                                       CommandParameter="{Binding ElementName=btnSetting}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </StackPanel>
            <Grid 
                x:Name="grdCursor" 
                Width="4" 
                Height="40" 
                Background="{DynamicResource Primary}" 
                HorizontalAlignment="Right"
                Margin="0,175,40,0" 
                VerticalAlignment="Top"/>
            <Grid 
                x:Name="grdLogOut" 
                HorizontalAlignment="Center" 
                Height="40" 
                Margin="0,0,0,40" 
                VerticalAlignment="Bottom" 
                Width="130">
                <materialDesign:PackIcon 
                    x:Name="icnLogOut" 
                    Kind="LogoutVariant" 
                    Margin="0" 
                    Width="34" 
                    Height="34" 
                    VerticalAlignment="Center"
                    Foreground="{StaticResource Primary}" />
                <Button 
                    x:Name="btnLogOut" 
                    Command="{Binding LogOutCommand}"
                    CommandParameter="{Binding ElementName=wdHome}"
                    Content="Đăng xuất" 
                    HorizontalAlignment="Right" 
                    Height="40" 
                    Margin="0" 
                    VerticalAlignment="Top" 
                    Width="130" 
                    Background="{x:Null}" 
                    BorderBrush="{x:Null}" 
                    Foreground="{StaticResource Black3}" 
                    FontSize="18" 
                    FontWeight="SemiBold" 
                    VerticalContentAlignment="Center" 
                    HorizontalContentAlignment="Left" 
                    Padding="0" 
                    FlowDirection="RightToLeft"/>
            </Grid>
        </Grid>
        <Grid 
            x:Name="grdMain"
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Height="780" 
            VerticalAlignment="Top"
            Width="1201" >
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid 
                x:Name="grdHeader" 
                HorizontalAlignment="Left" 
                Height="60" 
                VerticalAlignment="Top" 
                Width="1201" 
                Background="{StaticResource White}">
                <Grid 
                    x:Name="grdAccount" 
                    HorizontalAlignment="Right" 
                    Height="50" 
                    Margin="0,0,30,0" 
                    VerticalAlignment="Center"
                    Width="200">
                    <Ellipse 
                        x:Name="imgAccount" 
                        Height="40"
                        Width="40" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        Cursor="Hand">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/FootballFieldManagement;component/Resources/Images/avatar.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Label 
                        x:Name="lbAccount" 
                        Content="Administrator" 
                        HorizontalAlignment="Left" 
                        Margin="45,5,0,5" 
                        VerticalAlignment="Center" 
                        Width="155" 
                        Height="40" 
                        VerticalContentAlignment="Center"
                        FontSize="18" 
                        FontWeight="SemiBold" 
                        Foreground="{DynamicResource Black1}" />
                    <!--<materialDesign:PackIcon 
                        x:Name="icnMoreInfo" 
                        Kind="ChevronDown" 
                        Foreground="{DynamicResource Black2}" 
                        Width="28" 
                        Height="28"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Cursor="Hand" />-->
                </Grid>
            </Grid>
            <Grid 
                x:Name="grdBody_Home" 
                DataContext="{StaticResource ReportVM}"
                Grid.Row="1"
                HorizontalAlignment="Left" 
                Height="720" 
                VerticalAlignment="Top" 
                Width="1201"
                Margin="0"
                Visibility="Visible">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding LoadCommand}" 
                                                CommandParameter="{Binding ElementName=wdHome}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Grid 
                    DataContext="{StaticResource ReportVM}"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="1100"
                    Height="150" 
                    Margin="40,30,0,0">
                    <materialDesign:Card
                        Background="#FFFEC007"
                        HorizontalAlignment="Left" 
                        Width="320"
                        Height="150" 
                        Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="Doanh thu ngày"
                                HorizontalAlignment="Left"
                                Margin="20,20,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Top" 
                                FontSize="22" 
                                Foreground="{DynamicResource White}" 
                                FontWeight="Medium"/>
                            <TextBlock
                                x:Name="txbTodayRevenue"
                                Grid.Row="1"
                                Text="{Binding TodayRevenue}"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="24" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource White}" />
                            <TextBlock
                                x:Name="txbToday"
                                Grid.Row="2"
                                Text="{Binding CurrentDate}"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="16" 
                                FontWeight="Medium" 
                                Foreground="{DynamicResource White}" />
                            <Grid 
                                Width="50" 
                                Height="50"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,20,20,0">
                                <Grid.Background>
                                    <ImageBrush ImageSource="/FootballFieldManagement;component/Resources/Images/avatar.png" Stretch="UniformToFill"/>
                                </Grid.Background>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card
                        Background="#FF2195F2"
                        HorizontalAlignment="Center" 
                        Width="320"
                        Height="150" 
                        Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="Doanh thu tháng"
                                HorizontalAlignment="Left"
                                Margin="20,20,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Top" 
                                FontSize="22" 
                                Foreground="{DynamicResource White}" 
                                FontWeight="Medium"/>
                            <TextBlock
                                x:Name="txbThisMonthRevenue"
                                Grid.Row="1"
                                Text="{Binding ThisMonthRevenue}"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="24" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource White}" />
                            <TextBlock
                                x:Name="txbThisMonth"
                                Grid.Row="2"
                                Text="{Binding CurrentMonth}"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="16" 
                                FontWeight="Medium" 
                                Foreground="{DynamicResource White}" />
                            <Grid 
                                Width="50"
                                Height="50" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"
                                Margin="0,20,20,0">
                                <Grid.Background>
                                    <ImageBrush ImageSource="/FootballFieldManagement;component/Resources/Images/avatar.png" Stretch="UniformToFill"/>
                                </Grid.Background>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card
                        Width="320"
                        HorizontalAlignment="Right" 
                        Height="150" 
                        Background="#FFF34336" Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="Số lượt đặt sân"
                                HorizontalAlignment="Left"
                                Margin="20,20,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Top" 
                                FontSize="22" 
                                Foreground="{DynamicResource White}" 
                                FontWeight="Medium"/>
                            <TextBlock
                                x:Name="txbNumOfHiredField"
                                Grid.Row="1"
                                Text="{Binding NumOfHiredField}"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="24" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource White}" />
                            <TextBlock
                                x:Name="txbThisMonth1"
                                Grid.Row="2"
                                Text="{Binding CurrentMonth}"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="16" 
                                FontWeight="Medium" 
                                Foreground="{DynamicResource White}" />
                            <Grid 
                                Width="50"
                                Height="50" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top" 
                                Margin="0,20,20,0">
                                <Grid.Background>
                                    <ImageBrush ImageSource="/FootballFieldManagement;component/Resources/Images/avatar.png" Stretch="UniformToFill"/>
                                </Grid.Background>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
                <Border 
                    BorderThickness="1"
                    HorizontalAlignment="Left"
                    Height="460" 
                    Margin="40,220,0,0"
                    VerticalAlignment="Top" 
                    Width="420" 
                    CornerRadius="4" 
                    Background="{DynamicResource White}">
                    <Border.Effect>
                        <DropShadowEffect 
                            BlurRadius="8" 
                            ShadowDepth="1.5" 
                            Direction="270" 
                            Color="{StaticResource MaterialDesignShadow}"
                            Opacity=".42"/>
                    </Border.Effect>
                    <Grid 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        Width="420" 
                        Height="460"
                        Margin="0" 
                        Background="{DynamicResource White}">
                        <ComboBox
                            DataContext="{StaticResource ReportVM}"
                            x:Name="cboSelectTimePie"
                            materialDesign:ComboBoxAssist.ClassicMode="true"
                            FontSize="16"
                            FontWeight="Medium" 
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            materialDesign:HintAssist.Hint="Chọn thời gian"
                            Width="160" 
                            Height="40" 
                            HorizontalAlignment="Left" 
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center" 
                            Padding="3,0,0,0" 
                            Margin="30,15,0,0"
                            VerticalAlignment="Top">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding InitPieChartCommand}" 
                                                CommandParameter="{Binding ElementName=wdHome}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <ComboBoxItem Content="Hôm nay"/>
                            <ComboBoxItem Content="Tháng nay"/>
                        </ComboBox>
                        <lvc:PieChart
                            DataContext="{StaticResource ReportVM}"
                            Series="{Binding PieSeriesCollection}"
                            LegendLocation="None"  
                            Hoverable="True"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top"
                            Width="360"
                            Height="320" 
                            Margin="0,70,0,0" 
                            HoverPushOut="10"
                            FontSize="16">
                        </lvc:PieChart>
                        <StackPanel 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Height="45"
                            Margin="0,400,0,0" 
                            VerticalAlignment="Top">
                            <ToggleButton
                                Style="{StaticResource MaterialDesignActionToggleButton}"
                                ToolTip="Sân"
                                Width="45" 
                                Height="45" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"
                                Margin="0" 
                                Background="{DynamicResource Success}">
                                <ToggleButton.Content>
                                    <materialDesign:PackIcon 
                                        Kind="Soccer"
                                        Width="30"
                                        Height="30" 
                                        Foreground="{DynamicResource White}" />
                                </ToggleButton.Content>
                                <materialDesign:ToggleButtonAssist.OnContent>
                                    <materialDesign:PackIcon 
                                        Kind="Soccer"
                                        Width="30"
                                        Height="30" 
                                        Foreground="{DynamicResource White}"/>
                                </materialDesign:ToggleButtonAssist.OnContent>
                            </ToggleButton>
                            <TextBlock
                                TextWrapping="Wrap" 
                                Text="Sân bóng" 
                                Margin="8,0,16,0" 
                                FontSize="16" 
                                FontWeight="SemiBold" 
                                VerticalAlignment="Center"/>
                            <ToggleButton
                                Style="{StaticResource MaterialDesignActionToggleButton}"
                                ToolTip="Sân"
                                Width="45" 
                                Height="45" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"
                                Margin="0" 
                                Background="{DynamicResource Primary}">
                                <ToggleButton.Content>
                                    <materialDesign:PackIcon 
                                        Kind="ShoppingOutline"
                                        Width="30"
                                        Height="30" 
                                        Foreground="{DynamicResource White}" />
                                </ToggleButton.Content>
                                <materialDesign:ToggleButtonAssist.OnContent>
                                    <materialDesign:PackIcon 
                                        Kind="ShoppingOutline"
                                        Width="30"
                                        Height="30" 
                                        Foreground="{DynamicResource White}" />
                                </materialDesign:ToggleButtonAssist.OnContent>
                            </ToggleButton>
                            <TextBlock
                                TextWrapping="Wrap" 
                                Text="Bán hàng" 
                                Margin="8,0" 
                                FontSize="16"
                                FontWeight="SemiBold" 
                                VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                <Border 
                    BorderThickness="1"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top"
                    Height="460" 
                    Width="620"
                    Margin="520,220,0,0" 
                    CornerRadius="2" 
                    Background="{DynamicResource White}">
                    <Border.Effect>
                        <DropShadowEffect 
                            BlurRadius="8" 
                            ShadowDepth="1.5" 
                            Direction="270"
                            Color="{StaticResource MaterialDesignShadow}" 
                            Opacity=".42"/>
                    </Border.Effect>
                    <Grid
                        Margin="0" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Height="460" 
                        Width="580">
                        <StackPanel 
                            Orientation="Horizontal"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Left" 
                            Margin="60,20,0,0">
                            <ComboBox
                                DataContext="{StaticResource ReportVM}"
                                x:Name="cboSelectPeriod"
                                materialDesign:ComboBoxAssist.ClassicMode="true"
                                FontSize="16"
                                FontWeight="Medium" 
                                Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                materialDesign:HintAssist.Hint="Chọn chu kỳ"
                                Width="160" 
                                Height="40" 
                                HorizontalAlignment="Left" 
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center" 
                                Padding="3,0,0,0" 
                                Margin="0">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="SelectionChanged">
                                        <i:InvokeCommandAction Command="{Binding SelectionChangedCommand}" 
