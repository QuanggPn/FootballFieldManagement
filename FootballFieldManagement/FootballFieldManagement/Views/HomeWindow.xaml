<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:FootballFieldManagement.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
    xmlns:UserControls="clr-namespace:FootballFieldManagement.Resources.UserControls" 
    x:Class="FootballFieldManagement.Views.HomeWindow"
    x:Name="wdHome"
    mc:Ignorable="d"
    DataContext="{StaticResource HomeVM}"
    Title="Phần mềm Quản lý sân bóng" 
    Height="810" 
    Width="1447" 
    WindowStartupLocation="CenterScreen" 
    Background="#FFF4EEFF"
    Icon="/FootballFieldManagement;component/Resources/Images/FFM_Logo_Dark.png"
    ResizeMode="CanMinimize">
    <Grid 
        x:Name="grdWindow">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <Grid 
            x:Name="grdMenu" 
            HorizontalAlignment="Left" 
            Height="780" 
            Margin="0" 
            VerticalAlignment="Top" 
            Width="240" 
            Background="{StaticResource White}" 
            Grid.RowSpan="2">
            <Grid 
                x:Name="grdTitle" 
                HorizontalAlignment="Center"
                Height="120" 
                Margin="0,20,0,0"
                VerticalAlignment="Top"
                Width="180">
                <Image 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Width="60" 
                    Height="60"
                    Source="/FootballFieldManagement;component/Resources/Images/FFM_Logo_Transperant.png"/>
                <TextBlock 
                    x:Name="txbFieldName"  
                    TextWrapping="Wrap"
                    HorizontalAlignment="Center" 
                    Margin="0,60,0,0" 
                    VerticalAlignment="Top" 
                    Padding="0" 
                    FontSize="22" 
                    FontWeight="Bold" 
                    Foreground="{DynamicResource Primary}"
                    TextAlignment="Center"/>
            </Grid>
            <StackPanel
                x:Name="stkMenu" 
                HorizontalAlignment="Center" 
                Margin="0,160,0,0" 
                VerticalAlignment="Top"
                Width="170" >
                <Grid 
                    x:Name="grdHome" 
                    HorizontalAlignment="Left"
                    Height="65" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon
                        x:Name="icnHome" 
                        Kind="HomeOutline" 
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Foreground="{DynamicResource Gray2}" />
                    <Button 
                        x:Name="btnHome" 
                        Uid="0"
                        Content="Trang chủ"
                        HorizontalAlignment="Left" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}" 
                        FontSize="20" 
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Left" 
                        FontWeight="SemiBold" 
                        Padding="50,0,0,0" 
                        Cursor="Hand" 
                        FocusVisualStyle="{x:Null}"
                        Foreground="{DynamicResource Gray2}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnHome}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid 
                    x:Name="grdBusiness" 
                    HorizontalAlignment="Left"
                    Height="65" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon 
                        x:Name="icnBusiness" 
                        Kind="CashRegister"
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center" 
                        Cursor="Hand" 
                        Foreground="{StaticResource Gray2}" 
                        Margin="0,19" />
                    <Button
                        x:Name="btnBusiness" 
                        Uid="1"
                        Content="Kinh doanh"
                        HorizontalAlignment="Left" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}" 
                        FontSize="20" 
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Left" 
                        FontWeight="SemiBold" 
                        Padding="50,0,0,0" 
                        Cursor="Hand"
                        FocusVisualStyle="{x:Null}"
                        Foreground="{DynamicResource Gray2}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnBusiness}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid 
                    x:Name="grdField" 
                    HorizontalAlignment="Left"
                    Height="65" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon 
                        x:Name="icnField" 
                        Kind="SoccerField"
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center" 
                        Cursor="Hand" 
                        Foreground="{StaticResource Gray2}" 
                        Margin="0,19" />
                    <Button
                        x:Name="btnField" 
                        Uid="2"
                        Content="Sân bóng"
                        HorizontalAlignment="Left"
                        Height="40"
                        Margin="0"
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}" 
                        FontSize="20" 
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Left" 
                        FontWeight="SemiBold" 
                        Padding="50,0,0,0" 
                        Cursor="Hand"
                        FocusVisualStyle="{x:Null}"
                        Foreground="{DynamicResource Gray2}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnField}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid 
                    x:Name="grdGoods" 
                    HorizontalAlignment="Left"
                    Height="65" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon 
                        x:Name="icnGoods" 
                        Kind="StorefrontOutline" 
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center" 
                        Cursor="Hand"
                        Foreground="{StaticResource Gray2}" />
                    <Button 
                        x:Name="btnGoods" 
                        Uid="3"
                        Content="Hàng hóa"
                        HorizontalAlignment="Right" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}" 
                        FontSize="20" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Left"
                        FontWeight="SemiBold" 
                        Padding="50,0,0,0" 
                        Cursor="Hand" 
                        FocusVisualStyle="{x:Null}"
                        Foreground="{StaticResource Black3}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}"
                                                       CommandParameter="{Binding ElementName=btnGoods}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid
                    x:Name="grdEmployee" 
                    HorizontalAlignment="Left"
                    Height="65" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon
                        x:Name="icnEmployee" 
                        Kind="AccountOutline" 
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center" 
                        Cursor="Hand" 
                        Foreground="{StaticResource Gray2}" />
                    <Button 
                        x:Name="btnEmployee" 
                        Uid="4"
                        Command="{Binding E_LoadCommand}"
                        CommandParameter="{Binding ElementName=wdHome}"
                        Content="Nhân viên"
                        HorizontalAlignment="Right" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}"
                        FontSize="20" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Left" 
                        FontWeight="SemiBold" 
                        Padding="50,0,0,0" 
                        Cursor="Hand"
                        FocusVisualStyle="{x:Null}"
                        Foreground="{StaticResource Black3}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}" 
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}" 
                                                       CommandParameter="{Binding ElementName=btnEmployee}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid
                    x:Name="grdReport" 
                    HorizontalAlignment="Left"
                    Height="65" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon
                        x:Name="icnReport" 
                        Kind="ChartAreaspline" 
                        Width="30" 
                        Height="30" 
                        VerticalAlignment="Center" 
                        Cursor="Hand" 
                        Foreground="{StaticResource Gray2}" />
                    <Button 
                        x:Name="btnReport" 
                        Uid="5"
                        Content="Báo cáo"
                        HorizontalAlignment="Right" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}" 
                        FontSize="20" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Left" 
                        FontWeight="SemiBold"
                        Padding="50,0,0,0"
                        Cursor="Hand" 
                        FocusVisualStyle="{x:Null}"
                        Foreground="{StaticResource Black3}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}" 
                                                       CommandParameter="{Binding ElementName=btnReport}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
                <Grid 
                    x:Name="grdSetting" 
                    HorizontalAlignment="Left"
                    Height="65" 
                    Margin="0" 
                    Width="170">
                    <materialDesign:PackIcon
                        x:Name="icnSetting" 
                        Kind="CogOutline" 
                        Width="32" 
                        Height="32" 
                        VerticalAlignment="Center" 
                        Cursor="Hand" 
                        Foreground="{StaticResource Gray2}" />
                    <Button 
                        x:Name="btnSetting" 
                        Uid="6"
                        Content="Cài đặt"
                        HorizontalAlignment="Right" 
                        Height="40" 
                        Margin="0" 
                        Width="170" 
                        VerticalAlignment="Center"
                        BorderBrush="{x:Null}"
                        Background="{x:Null}"
                        FontSize="20" 
                        VerticalContentAlignment="Center" 
                        HorizontalContentAlignment="Left" 
                        FontWeight="SemiBold" 
                        Padding="50,0,0,0" 
                        Cursor="Hand" 
                        FocusVisualStyle="{x:Null}"
                        Foreground="{StaticResource Black3}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <i:InvokeCommandAction Command="{Binding SwitchTabCommand}"
                                                       CommandParameter="{Binding ElementName=wdHome}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="MouseMove">
                                <i:InvokeCommandAction Command="{Binding GetUidCommand}" 
                                                       CommandParameter="{Binding ElementName=btnSetting}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </StackPanel>
            <Grid 
                x:Name="grdCursor" 
                Width="4" 
                Height="40" 
                Background="{DynamicResource Primary}" 
                HorizontalAlignment="Right"
                Margin="0,172,35,0" 
                VerticalAlignment="Top"/>
            <Grid 
                x:Name="grdLogOut" 
                HorizontalAlignment="Center" 
                Height="40" 
                Margin="0,0,0,40" 
                VerticalAlignment="Bottom" 
                Width="130">
                <materialDesign:PackIcon 
                    x:Name="icnLogOut" 
                    Kind="LogoutVariant" 
                    Margin="0" 
                    Width="34" 
                    Height="34" 
                    VerticalAlignment="Center"
                    Foreground="{StaticResource Primary}" />
                <Button 
                    x:Name="btnLogOut" 
                    Command="{Binding LogOutCommand}"
                    CommandParameter="{Binding ElementName=wdHome}"
                    Content="Đăng xuất" 
                    HorizontalAlignment="Right" 
                    Height="40" 
                    Margin="0" 
                    VerticalAlignment="Top" 
                    Width="130" 
                    Background="{x:Null}" 
                    BorderBrush="{x:Null}"
                    FocusVisualStyle="{x:Null}"
                    Foreground="{StaticResource Black3}" 
                    FontSize="18" 
                    FontWeight="SemiBold" 
                    VerticalContentAlignment="Center" 
                    HorizontalContentAlignment="Left" 
                    Padding="0" 
                    FlowDirection="RightToLeft"/>
            </Grid>
        </Grid>
        <Grid 
            x:Name="grdMain"
            Grid.Column="1" 
            HorizontalAlignment="Left" 
            Height="780" 
            VerticalAlignment="Top"
            Width="1201" >
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid 
                x:Name="grdHeader" 
                HorizontalAlignment="Left" 
                Height="60" 
                VerticalAlignment="Top" 
                Width="1201" 
                Background="{StaticResource White}">
                <Grid 
                    x:Name="grdAccount" 
                    HorizontalAlignment="Right" 
                    Height="50" 
                    Margin="0,0,30,0" 
                    VerticalAlignment="Center"
                    Width="200">
                    <Ellipse 
                        x:Name="imgAccount" 
                        Height="40"
                        Width="40" 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Center" 
                        Cursor="Hand">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/FootballFieldManagement;component/Resources/Images/avatar.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <Label 
                        x:Name="lbAccount" 
                        Content="Administrator" 
                        HorizontalAlignment="Left" 
                        Margin="45,5,0,5" 
                        VerticalAlignment="Center" 
                        Width="155" 
                        Height="40" 
                        VerticalContentAlignment="Center"
                        FontSize="18" 
                        FontWeight="SemiBold" 
                        Foreground="{DynamicResource Black1}" />
                    <!--<materialDesign:PackIcon 
                        x:Name="icnMoreInfo" 
                        Kind="ChevronDown" 
                        Foreground="{DynamicResource Black2}" 
                        Width="28" 
                        Height="28"
                        HorizontalAlignment="Right" 
                        VerticalAlignment="Center" 
                        Cursor="Hand" />-->
                </Grid>
                <Button 
                    x:Name="btnCheckIn"
                    Content="Check in"
                    Command="{Binding OpenCheckAttendanceWindowCommand}"
                    CommandParameter="{Binding ElementName=wdHome}"
                    Style="{StaticResource MyPrimaryButtonStyle}"
                    Height="35" 
                    Width="120"
                    materialDesign:ButtonAssist.CornerRadius="2"
                    ToolTip="Đăng nhập" 
                    VerticalAlignment="Center" 
                    Margin="0,0,250,0"
                    FontSize="18" 
                    Padding="0"
                    HorizontalAlignment="Right" />
            </Grid>
            <Grid 
                x:Name="grdBody_Home" 
                DataContext="{StaticResource ReportVM}"
                Grid.Row="1"
                HorizontalAlignment="Left" 
                Height="720" 
                VerticalAlignment="Top" 
                Width="1201"
                Margin="0"
                Visibility="Visible">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Loaded">
                        <i:InvokeCommandAction Command="{Binding LoadCommand}"
                                                CommandParameter="{Binding ElementName=wdHome}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <Grid 
                    DataContext="{StaticResource ReportVM}"
                    HorizontalAlignment="Left" 
                    VerticalAlignment="Top" 
                    Width="1100"
                    Height="150" 
                    Margin="40,30,0,0">
                    <materialDesign:Card
                        Background="#FFFEC007"
                        HorizontalAlignment="Left" 
                        Width="320"
                        Height="150" 
                        Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="Doanh thu tháng"
                                HorizontalAlignment="Left"
                                Margin="20,20,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Top" 
                                FontSize="22" 
                                Foreground="{DynamicResource White}" 
                                FontWeight="Medium"/>
                            <TextBlock 
                                x:Name="txbRevenueThisMonth"
                                Grid.Row="1"
                                Text="{Binding ThisMonthRevenue}"
                                HorizontalAlignment="Left"
                                Margin="20,0.8,0,4.8" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="24" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource White}" />
                            <TextBlock
                                Text="{Binding ThisMonth}"
                                Grid.Row="2"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="16" 
                                FontWeight="Medium" 
                                Foreground="{DynamicResource White}" />
                            <Grid 
                                Width="50" 
                                Height="50"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="0,20,20,0">
                                <Ellipse>
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/FootballFieldManagement;component/Resources/Images/IncomeIcon.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card
                        Background="#FF2195F2"
                        HorizontalAlignment="Center" 
                        Width="320"
                        Height="150" 
                        Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="So với tháng trước"
                                HorizontalAlignment="Left"
                                Margin="20,20,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Top" 
                                FontSize="22" 
                                Foreground="{DynamicResource White}" 
                                FontWeight="Medium"/>
                            <TextBlock 
                                x:Name="txbIncreasing"
                                Grid.Row="1"
                                Text="{Binding IncreasingPercent}"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="24" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource White}" />
                            <TextBlock
                                Grid.Row="2"
                                Text="{Binding ThisMonth}"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="16" 
                                FontWeight="Medium" 
                                Foreground="{DynamicResource White}" />
                            <Grid 
                                Width="50"
                                Height="50" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"
                                Margin="0,20,20,0">
                                <Ellipse>
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/FootballFieldManagement;component/Resources/Images/IncreaseIcon.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                    <materialDesign:Card
                        Width="320"
                        HorizontalAlignment="Right" 
                        Height="150" 
                        Background="#FFF34336" 
                        Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                Text="Số lượt đặt sân"
                                HorizontalAlignment="Left"
                                Margin="20,20,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Top" 
                                FontSize="22" 
                                Foreground="{DynamicResource White}" 
                                FontWeight="Medium"/>
                            <TextBlock 
                                x:Name="txbNumOfHiredField"
                                Grid.Row="1"
                                Text="{Binding NumOfHiredField}"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="24" 
                                FontWeight="Bold" 
                                Foreground="{DynamicResource White}" />
                            <TextBlock
                                Grid.Row="2"
                                Text="{Binding ThisMonth}"
                                HorizontalAlignment="Left"
                                Margin="20,0,0,0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center" 
                                FontSize="16" 
                                FontWeight="Medium" 
                                Foreground="{DynamicResource White}" />
                            <Grid 
                                Width="50"
                                Height="50" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top" 
                                Margin="0,20,20,0">
                                <Ellipse>
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/FootballFieldManagement;component/Resources/Images/FieldCornerIcon.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>
                        </Grid>
                    </materialDesign:Card>
                </Grid>
                <Border 
                    BorderThickness="1"
                    HorizontalAlignment="Left"
                    Height="460" 
                    Margin="40,220,0,0"
                    VerticalAlignment="Top" 
                    Width="420" 
                    CornerRadius="4" 
                    Background="{DynamicResource White}">
                    <Border.Effect>
                        <DropShadowEffect 
                            BlurRadius="8" 
                            ShadowDepth="1.5" 
                            Direction="270" 
                            Color="{StaticResource MaterialDesignShadow}"
                            Opacity=".42"/>
                    </Border.Effect>
                    <Grid 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        Width="420" 
                        Height="460"
                        Margin="0" 
                        Background="{DynamicResource White}">
                        <ComboBox
                            DataContext="{StaticResource ReportVM}"
                            x:Name="cboSelectTimePie"
                            materialDesign:ComboBoxAssist.ClassicMode="true"
                            FontSize="16"
                            FontWeight="Medium" 
                            Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                            materialDesign:HintAssist.Hint="Chọn thời gian"
                            Width="160" 
                            Height="40" 
                            HorizontalAlignment="Left" 
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center" 
                            Padding="3,0,0,0" 
                            Margin="30,15,0,0"
                            VerticalAlignment="Top">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding InitPieChartCommand}" 
                                                CommandParameter="{Binding ElementName=wdHome}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <ComboBoxItem Content="Hôm nay"/>
                            <ComboBoxItem Content="Tháng nay"/>
                        </ComboBox>
                        <lvc:PieChart 
                            x:Name="lvcPieChart"
                            DataContext="{StaticResource ReportVM}"
                            Series="{Binding PieSeriesCollection}"
                            LegendLocation="None"  
                            Hoverable="True"
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Top"
                            Width="360"
                            Height="320" 
                            Margin="0,70,0,0" 
                            HoverPushOut="10"
                            FontSize="16"/>
                        <StackPanel 
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Height="45"
                            Margin="0,400,0,0" 
                            VerticalAlignment="Top">
                            <ToggleButton
                                Style="{StaticResource MaterialDesignActionToggleButton}"
                                ToolTip="Sân"
                                Width="45" 
                                Height="45" 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top"
                                Margin="0" 
                                Background="{DynamicResource Success}">
                                <materialDesign:ToggleButtonAssist.OnContent>
                                    <materialDesign:PackIcon 
                                        Kind="Soccer"
                                        Width="30"
                                        Height="30" 
                                        Foreground="{DynamicResource White}"/>
                                </materialDesign:ToggleButtonAssist.OnContent>
                                <materialDesign:PackIcon 
                                        Kind="Soccer"
                                        Width="30"
                                        Height="30" 
                                        Foreground="{DynamicResource White}" />
                            </ToggleButton>
                            <TextBlock
                                TextWrapping="Wrap" 
                                Text="Sân bóng" 
                                Margin="8,0,16,0" 
                                FontSize="16" 
                                FontWeight="SemiBold" 
                                VerticalAlignment="Center"/>
                            <ToggleButton
                                Style="{StaticResource MaterialDesignActionToggleButton}"
                                ToolTip="Sân"
                                Width="45" 
                                Height="45" 
                                HorizontalAlignment="Right" 
                                VerticalAlignment="Top"
                                Margin="0" 
                                Background="{DynamicResource Primary}">
                                <materialDesign:ToggleButtonAssist.OnContent>
                                    <materialDesign:PackIcon 
                                        Kind="ShoppingOutline"
                                        Width="30"
                                        Height="30" 
                                        Foreground="{DynamicResource White}" />
                                </materialDesign:ToggleButtonAssist.OnContent>
                                <materialDesign:PackIcon 
                                        Kind="ShoppingOutline"
