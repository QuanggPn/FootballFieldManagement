<Window x:Class="FootballFieldManagement.Views.LoginWindow"
        x:Name="wdLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootballFieldManagement"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:ei ="http://schemas.microsoft.com/expression/2010/interactions"
        xmlns:vm ="clr-namespace:FootballFieldManagement.ViewModels"
        mc:Ignorable="d"
        DataContext="{StaticResource LoginVM}"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Phần mềm Quản lý sân bóng" 
        Height="810" 
        Width="1440" 
        WindowStartupLocation="CenterScreen" 
        Background="White" 
        ResizeMode="CanMinimize">
    <Window.Resources>
        <ControlTemplate x:Key="textBoxErrorTemplate">
            <StackPanel>
                <AdornedElementPlaceholder x:Name="placeholder"/>
                <TextBlock DockPanel.Dock="Bottom" Foreground="Red"
                           Text="{Binding ElementName=placeholder, Path=AdornedElement.(Validation.Errors)[0].ErrorContent}"/>
            </StackPanel>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
        <Button
            Width="160"
            Height="50" 
            Content="Chấm công" 
            HorizontalAlignment="Right"
            VerticalAlignment="Top" 
            Margin="0,60,133.6,0" 
            Command="{Binding OpenCheckAttendanceWindowCommand}" 
            CommandParameter="{Binding ElementName=wdLogin}"/>
        <Label 
            x:Name="lblSoftwareName" 
            Content="Phần mềm Quản lý sân bóng" 
            HorizontalAlignment="Center" 
            Height="70" 
            Width="540" 
            VerticalAlignment="Top" 
            Padding="0" 
            VerticalContentAlignment="Center" 
            FontSize="36" 
            Margin="261,30,619,0" 
            Foreground="{StaticResource Black2}" 
            FontWeight="Bold"/>
        <Ellipse 
            HorizontalAlignment="Left" 
            Height="400"
            Width="400"
            Margin="-153,-173,0,0" 
            Stroke="{StaticResource Success}" 
            VerticalAlignment="Top"  
            StrokeThickness="60"/>
        <Ellipse 
            HorizontalAlignment="Left" 
            Height="800" 
            Width="800"
            Margin="1025,380,-405,-400" 
            Stroke="{StaticResource Success}" 
            VerticalAlignment="Top"  
            StrokeThickness="120"/>
        <Label 
            x:Name="lblCopyright" 
            Content="Created by COF | Copyright © 2020 All Rights Reserved" 
            HorizontalAlignment="Left" 
            Height="34" Width="540" 
            VerticalAlignment="Bottom" 
            Padding="0" 
            VerticalContentAlignment="Bottom" 
            FontSize="18" 
            Margin="25,0,0,20" 
            Foreground="{StaticResource Black2}" 
            FontWeight="Medium"/>
        <Grid 
            Width="380" 
            Height="460" 
            Background="{StaticResource White}" >
            <Grid.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.4"/>
            </Grid.Effect>
            <Label 
                x:Name="lblLogin" 
                Content="Đăng nhập" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" 
                Padding="0" 
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center" 
                FontSize="32" 
                FontWeight="Bold" 
                Margin="0,30,0,0" 
                Foreground="{StaticResource Black2}"/>
            <Grid 
                Width="270" 
                Height="50"
                HorizontalAlignment="Center" 
                VerticalAlignment="Top"
                Margin="0,140,0,0">
                <materialDesign:PackIcon 
                    Kind="Account" 
                    Foreground="{StaticResource Gray2}"
                    Width="30" 
                    Height="30" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"  
                    Margin="0" />
                <TextBox 
                    x:Name="txtUsername"
                    materialDesign:HintAssist.Hint="Tên đăng nhập" 
                    Margin="0" 
                    Width="220"
                    Height="50" 
                    HorizontalAlignment="Right" 
                    Validation.ErrorTemplate="{StaticResource textBoxErrorTemplate}"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    FontSize="18" 
                    BorderBrush="{StaticResource Primary}" 
                    TabIndex="1" 
                    VerticalAlignment="Center" 
                    CaretBrush="{StaticResource Primary}" 
                    FontWeight="Medium" 
                    Padding="2,0,0,0" >
                </TextBox>
            </Grid>
            <Grid 
                Width="270" 
                Height="50" 
                VerticalAlignment="Top" 
                HorizontalAlignment="Center"
                Margin="0,210,0,0">
                <materialDesign:PackIcon 
                    Kind="Lock" 
                    Foreground="{StaticResource Gray2}"
                    Width="30" 
                    Height="30" 
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom" 
                    Margin="0" />
                <PasswordBox
                    x:Name="txtPassword"
                    materialDesign:HintAssist.Hint="Mật khẩu" 
                    Margin="0" 
                    Width="220" 
                    Height="50" 
                    HorizontalAlignment="Right" 
                    BorderBrush="{StaticResource Primary}"
                    Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" 
                    FontSize="18" 
                    TabIndex="2" 
                    VerticalAlignment="Center" 
                    CaretBrush="{StaticResource Primary}" 
                    FontWeight="SemiBold"
                    Padding="2,0,0,0" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PasswordChanged">
                            <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}" CommandParameter="{Binding ElementName=txtPassword}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </PasswordBox>
            </Grid>
            <Label 
                x:Name="lblForgetPassword" 
                Content="Quên mật khẩu?" 
                HorizontalAlignment="Right" 
                Height="24" Width="120" 
                VerticalAlignment="Top" 
                Padding="0" 
                HorizontalContentAlignment="Right" 
                VerticalContentAlignment="Center" 
                FontSize="16" 
                Margin="0,270,60,0" 
                FontWeight="Medium" 
                Cursor="Hand">
                <Label.Foreground>
                    <SolidColorBrush Color="#FFFF7222" Opacity="0.9"/>
                </Label.Foreground>
            </Label>
            <Button 
                x:Name="btnLogin"
                IsDefault="True"
                Command="{Binding LogInCommand}"
                CommandParameter="{Binding ElementName=wdLogin}"
                Style="{StaticResource MaterialDesignRaisedLightButton}"
                FocusVisualStyle="{x:Null}"
                Height="40" 
                Width="220"
                materialDesign:ButtonAssist.CornerRadius="18"
                ToolTip="Đăng nhập" 
                VerticalAlignment="Top" 
                Margin="0,330,0,0" 
                HorizontalAlignment="Center"
                TabIndex="3" 
                BorderThickness="0" 
                BorderBrush="{x:Null}" 
                Background="{StaticResource Primary}">
                <TextBlock 
                    Text="Đăng nhập" 
                    Foreground="{StaticResource White}" 
                    FontSize="20" 
                    FontWeight="SemiBold" 
                    VerticalAlignment="Center" 
                    Margin="0,0,0,4" />
            </Button>
            <Button 
                x:Name="btnSignUp" 
                FocusVisualStyle="{x:Null}"
                Command="{Binding OpenSignUpWindowCommand}"
                CommandParameter="{Binding ElementName=wdLogin}"
                Content="Đăng ký" 
                ToolTip="Chưa có tài khoản? Hãy đăng ký"
                HorizontalAlignment="Center" 
                Height="24" 
                Width="120" 
                VerticalAlignment="Top" 
                Padding="0" 
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center" 
                FontSize="18" 
                Margin="0,410,0,0" 
                Foreground="{StaticResource Secondary}" 
                FontWeight="Medium" 
                Cursor="Hand"
                Background="{x:Null}" 
                BorderBrush="{x:Null}" 
                IsTabStop="False"/>
        </Grid>
    </Grid>
</Window>
